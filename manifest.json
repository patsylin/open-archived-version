{
  "manifest_version": 3,
  "name": "Archive Reader",
  "description": "Open the newest archived version of any page using Wayback Machine or Archive.ph. Automatically detects paywalls and suggests an archived version.",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open archived version"
  },
  "permissions": ["tabs", "storage", "scripting"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html"
}
